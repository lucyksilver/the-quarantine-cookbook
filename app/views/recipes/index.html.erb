                    <%= ingredient.quantity %>
                    <%= ingredient.name %>,
                    <% end %>
                    <p>Category:
                        <%= recipe.category %>
                    </p>
                    <p>
                        <%= recipe.level %>
                    </p>
                    <p>Time:
                        <%= recipe.time %>
                    </p>
                </div>
                <% end %>
                <div id="collapseComfort" class="collapse recipe-cards">
                    <% @remainder_comfort.each do |recipe| %>
                    <div class="recipe-card">
                        <strong>
                            <p>
                                <%= link_to recipe.name, recipe_path(recipe) %>
                            </p>
                        </strong>
                        <p>Ingredients:</p>
                        <% recipe.ingredients.each do |ingredient| %>
                        <%= ingredient.quantity %>
                        <%= ingredient.name %>,
                        <% end %>
                        <p>
                            <%= recipe.category %>
                        </p>
                        <p>
                            <%= recipe.level %>
