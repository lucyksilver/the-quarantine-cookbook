<div class="container">
    <div class="search" id="top">
        <%= link_to "home", root_path %>
        <h2>Jump to:</h2>
        <ol>
            <li><a href="#comfort">Home Comforts</a></li>
            <li><a href="#immune">Boost Your Immune System</a></li>
            <li><a href="#date">Date Night</a></li>
            <li><a href="#bake">Procrastinating Baking</a></li>
        </ol>
        <%= form_tag recipes_path, method: :get do %>
        <%= text_field_tag :query,
      params[:query],
      class: "form-control",
      placeholder: "Type an ingredient"
    %>
        <%= submit_tag "Search", class: "btn btn-primary" %>
        <% end %>
    </div>
    <h3>Recipes</h3>
    <div class="recipe-cards">
        <% if params[:query].present? %>
        <%  @recipes.each do |recipe| %>
        <div class='recipe-card'>
            <strong>
                <p>
                    <%= link_to recipe.name, recipe_path(recipe) %>
                </p>
            </strong>
            <p>Ingredients:</p>
            <% recipe.ingredients.each do |ingredient| %>
            <%= ingredient.quantity %>
            <%= ingredient.name %>,
            <% end %>
            <p>Category:
                <%= recipe.category %>
            </p>
            <p>
                <%= recipe.level %>
            </p>
            <p>Time:
                <%= recipe.time %>
            </p>
        </div>
      </div>
        <% end %>
