<%= link_to "home", root_path %>

<h3>Recipes</h3>

<div class="container">
  <div class="row">
    <div class="col-sm-8 offset-sm-2">
      <div id="recipes">
        <% @recipes.each do |recipe| %>
          <h4><%= recipe.name %></h4>
          <p><%= recipe.category %></p>
            <p><%= recipe.level %></p>
          <p><%= recipe.time %></p>
        <% end %>
      </div>
    </div>
  </div>
</div>
